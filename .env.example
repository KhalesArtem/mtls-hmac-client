GATEWAY_ENDPOINT=https://client.badssl.com/
GATEWAY_HMAC_SECRET=change_me

GATEWAY_CERT_PATH=/absolute/path/to/badssl.com-client-cert.pem
GATEWAY_KEY_PATH=/absolute/path/to/badssl.com-client-key.pem

# Пароль к приватному ключу (для badssl: badssl.com)
GATEWAY_KEY_PASSPHRASE=badssl.com

# Проверка сертификата сервера:
# true/false или путь к CA-файлу (если у шлюза свой CA)
GATEWAY_VERIFY=true

# HMAC алгоритм
GATEWAY_HMAC_ALGO=sha256

# Какой заголовок использовать для подписи
GATEWAY_SIGNATURE_HEADER=X-Signature

# Таймауты
HTTP_TIMEOUT=10
HTTP_CONNECT_TIMEOUT=5

# Если хочешь: “база” заголовка Authorization вместо X-Signature
# AUTH_PREFIX=HMAC

INTEGRATION_TEST_ENABLED=1