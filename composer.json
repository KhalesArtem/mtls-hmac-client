{
  "name": "khalesartem/mtls-hmac-client",
  "description": "PHP client for secure GET requests using mutual TLS (mTLS) and HMAC signatures",
  "type": "library",
  "license": "MIT",

  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.8",
    "vlucas/phpdotenv": "^5.6"
  },

  "require-dev": {
    "phpunit/phpunit": "^10.5"
  },

  "autoload": {
    "psr-4": {
      "KhalesArtem\\MtlsHmac\\": "src/"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "KhalesArtem\\MtlsHmac\\Tests\\": "tests/"
    }
  },

  "scripts": {
    "test": "phpunit"
  },

  "minimum-stability": "stable",
  "prefer-stable": true
}
