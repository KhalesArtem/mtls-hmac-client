{
  "name": "artemkhales/payment-mtls-hmac-client",
  "description": "PHP 8.2+ payment gateway client with mTLS transport security and HMAC signatures. Supports automatic ENV configuration fallback.",
  "type": "library",
  "license": "MIT",
  "keywords": ["payment", "mtls", "hmac", "gateway", "ssl", "security", "php8"],
  "authors": [
    {
      "name": "Artem Khales"
    }
  ],
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "symfony/dotenv": "^7.0"
  },
  "autoload": {
    "psr-4": {
      "Payment\\MtlsHmac\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Payment\\MtlsHmac\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
